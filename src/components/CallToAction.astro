---
import { Icon } from 'astro-icon/components';
---


<section id="contact" class="section has-background-primary hero">
   <div class="is-overlay has-background-primary" style="opacity: 0.8;"></div>
   <div class="container">
      <div class="columns is-centered">
         <div class="column is-6 has-text-white has-text-centered">
            <h2 class="title is-2 has-text-white">Ready to transform your workspace?</h2>
            <p class="is-size-5 mb-5">Book a tour today and experience the LS Professional Offices difference. Our team will help you find the perfect office solution for your business.</p>
            <!-- <p class="is-size-5 mb-5">No commitment required - just come see what we have to offer.</p> -->
         </div>

      </div>

      <div class="columns">
         <div class="column is-4">
            <div class="box has-text-centered">
               <span class="icon is-large has-text-primary mb-4">
                  <Icon name="tabler:map-pin" class="is-size-1" />
               </span>
               <h3 class="title is-4">Visit Us</h3>
               <p>Woodside New York 11377</p>
            </div>
         </div>

         <div class="column is-4">
            <div class="box has-text-centered">
               <span class="icon is-large has-text-primary mb-4">
                  <Icon name="tabler:phone" class="is-size-1" />
               </span>
               <h3 class="title is-4">Call Us</h3>
               <p><a href="tel:+17189058500" class="has-text-primary">+1 (718) 905-8500</a></p>
            </div>
         </div>

         <div class="column is-4">
            <div class="box has-text-centered">
               <span class="icon is-large has-text-primary mb-4">
                  <Icon name="tabler:mail" class="is-size-1" />
               </span>
               <h3 class="title is-4">Email Us</h3>
               <p><a href="mailto:offices@latinosupportny.com" class="has-text-primary">offices@latinosupportny.com</a></p>
            </div>
         </div>
      </div>
   </div>
</section>
<style>
.feature-item .icon {
    margin-right: 0.5rem;
}

.feature-item {
    font-size: 1.1rem;
}

.buttons {
    gap: 1rem;
}

.button.is-white.is-outlined {
    border-color: white;
    color: white;
}

.button.is-white.is-outlined:hover {
    background-color: white;
    color: var(--primary);
}

.image img {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}
</style>

<style>
   .hero {
       position: relative;
       background-image: url('/src/images/bg-ny-sky2.webp');
       background-size: cover;
       background-position: center;
   }

   .hero .is-overlay {
       position: absolute;
       top: 0;
       left: 0;
       width: 100%;
       height: 100%;
   }
</style>