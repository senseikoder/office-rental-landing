---
import { Icon } from 'astro-icon/components';
---

<section id="pricing" class="section has-background-light">
   <div class="container">
      <div class="has-text-centered mb-6">
         <h2 class="title is-2">Simple, Transparent Pricing</h2>
         <p class="subtitle is-5 has-text-grey">Choose the plan that works for your business</p>
      </div>

      <div class="columns is-multiline">
         <div class="column is-4-desktop is-6-tablet">
            <div class="card pricing-card">
               <div class="card-content has-text-centered">
                  <h3 class="title is-3">Basic</h3>
                  <p class="price-tag">
                     <span class="currency">$</span>
                     <span class="price">299</span>
                     <span class="period">/month</span>
                  </p>
                  <div class="content pricing-features">
                     <ul>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           Hot desk in coworking space
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           8am-6pm access
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           High-speed internet
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           5 hours meeting room credits
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           Coffee & tea included
                        </li>
                        <li class="has-text-grey">
                           <span class="icon">
                              <Icon name="tabler:x" />
                           </span>
                           Private office
                        </li>
                        <li class="has-text-grey">
                           <span class="icon">
                              <Icon name="tabler:x" />
                           </span>
                           Business address
                        </li>
                     </ul>
                  </div>
               </div>
               <footer class="card-footer">
                  <a href="#book-tour" class="card-footer-item button is-primary is-fullwidth">Choose Plan</a>
               </footer>
            </div>
         </div>

         <div class="column is-4-desktop is-6-tablet">
            <div class="card pricing-card is-primary">
               <div class="card-content has-text-centered">
                  <h3 class="title is-3">Professional</h3>
                  <p class="price-tag">
                     <span class="currency">$</span>
                     <span class="price">599</span>
                     <span class="period">/month</span>
                  </p>
                  <div class="content pricing-features">
                     <ul>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           Dedicated desk
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           24/7 access
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           High-speed internet
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           15 hours meeting room credits
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           Coffee & tea included
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           Business address
                        </li>
                        <li class="has-text-grey">
                           <span class="icon">
                              <Icon name="tabler:x" />
                           </span>
                           Private office
                        </li>
                     </ul>
                  </div>
               </div>
               <footer class="card-footer">
                  <a href="#book-tour" class="card-footer-item button is-primary is-fullwidth">Choose Plan</a>
               </footer>
            </div>
         </div>

         <div class="column is-4-desktop is-6-tablet">
            <div class="card pricing-card">
               <div class="card-content has-text-centered">
                  <h3 class="title is-3">Enterprise</h3>
                  <p class="price-tag">
                     <span class="currency">$</span>
                     <span class="price">999</span>
                     <span class="period">/month</span>
                  </p>
                  <div class="content pricing-features">
                     <ul>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           Private office (1-4 people)
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           24/7 access
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
                           High-speed internet
                        </li>
                        <li>
                           <span class="icon has-text-success">
                              <Icon name="tabler:check" />
                           </span>
